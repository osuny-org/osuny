<% if organizations.any? %>
  <div class="row">
    <% organizations.each do |organization| %>
      <%
      l10n = organization.best_localization_for(current_language)
      %>
      <div class="col-6 col-lg-3 col-xxl-2">
        <div class="position-relative mb-5">
          <% if l10n.logo.attached? %>
            <%= kamifusen_tag l10n.logo,
                              width: 400,
                              class: 'img-fluid organization__logo mb-2' %>
          <% else %>
            <%= image_tag 'extranet/company.png',
                          width: 400,
                          class: 'img-fluid organization__logo mb-2' %>
          <% end %>
          <%= link_to l10n,
                      contacts_organization_path(organization),
                      class: 'stretched-link' %>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <p><%= t("extranet.search.no_results") %></p>
<% end %>