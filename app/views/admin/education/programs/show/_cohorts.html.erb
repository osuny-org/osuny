<div class="row g-2">
  <% @program.cohorts.ordered.each do |cohort| %>
    <div>
      <div class="<%= osuny_card_classes(horizontal: true) %>">
        <div class="card-body">
          <div class="row">
            <div class="col-lg-6">
              <%= link_to cohort.academic_year, [:admin, cohort], class: 'stretched-link' %>
            </div>
            <div class="col-lg-6">
              <%= cohort.school.to_s_in(current_language) %>
            </div>
          </div>
        </div>
        <div class="card-footer small text-muted">
          <%= cohort.people.count %>
          <%= University::Person::Alumnus.model_name.human(count: cohort.people.count).downcase %>
        </div>
      </div>
    </div>
  <% end %>
</div>