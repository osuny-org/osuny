<%= osuny_panel t('metadata'), small: true do %>
  <%= @project.published  ? Communication::Website::Agenda::Event.human_attribute_name(:published)
                        : t('admin.communication.website.agenda.projects.draft') %>

  <%= render 'admin/application/i18n/inline', about: @project %>
  <% if @project.categories.any? %>
    <%= t(
          'admin.communication.website.posts.in', 
          categories: @project.categories.collect(&:to_s).join(', ')
        ) %>
  <% end %>
  <%= render 'admin/application/permalinks/redirects', about: @project %>
<% end %>
