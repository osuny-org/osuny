<div class="row g-2 mb-3">
  <% categories.each do |category| %>
    <div>
      <div class="<%= osuny_card_classes(horizontal: true) %>">
        <%= osuny_thumbnail_localized category %>
        <div class="card-body">
          <%= osuny_published_localized category %>
          <%= osuny_link_localized  category, 
                                    admin_communication_extranet_post_category_path(extranet_id: category.extranet.id, id: category.id),
                                    classes: 'stretched-link' %>
        </div>
        <div class="card-footer small text-muted">
          <%= category.posts.count %>
          <%= Communication::Extranet::Post.model_name.human(count: category.posts.count).downcase %>
        </div>
      </div>
    </div>
  <% end %>
</div>
