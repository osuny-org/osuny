<div class="row g-2 mb-3">
  <% documents.each do |document| %>
    <div>
      <div class="<%= osuny_card_classes(horizontal: true) %>">
        <%= osuny_thumbnail_localized document %>
        <div class="card-body">
          <div class="row">
            <div class="col-lg-6">
              <%= osuny_published_localized document %>
              <%= osuny_link_localized document,
                          admin_communication_extranet_document_path(extranet_id: document.extranet.id, id: document.id),
                          classes: "stretched-link" %>
            </div>
            <div class="col-lg-3">
              <%= document.category.to_s_in(current_language) %>
            </div>
            <div class="col-lg-3">
              <%= document.kind.to_s_in(current_language) %>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
