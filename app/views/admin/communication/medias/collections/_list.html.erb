<div class="row g-3">
  <% collections.each do |collection| %>
    <div class="col-lg-6 col-xxl-4">
      <div class="<%= osuny_card_classes(horizontal: true) %>">
        <%= osuny_thumbnail_localized collection %>
        <div class="card-body">
          <%= osuny_link_localized  collection,
                                    admin_communication_media_collection_path(collection),
                                    classes: 'stretched-link' %>
        </div>
        <div class="card-footer small text-muted">
          <%= collection.medias.count %>
          <%= Communication::Media.model_name.human(count: collection.medias.count).downcase %>
        </div>
      </div>
    </div>
  <% end %>
</div>