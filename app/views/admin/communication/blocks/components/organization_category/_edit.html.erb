<% categories = collection_tree(
                  current_university.organization_categories
                                    .in_closest_language_id(block.language.id)
                ) %>
<label  class="form-label"
        :for="<%= dom_id.html_safe %>">
  <%= label %>
</label>
<select :id="<%= dom_id.html_safe %>"
        class="form-select select mb-3"
        v-model="<%= model %>.<%= property %>">
  <% categories.each_with_index do |category, index| %>
    <option value="<%= category[:id] %>">
      <%= category[:label].html_safe %>
    </option>
  <% end %>
</select>
