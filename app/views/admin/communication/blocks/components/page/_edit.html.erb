<%
pages = osuny_collection_tree(
  block.about.website.pages
    .tmp_original, # TODO L10N : remove
  localized: true
)
%>
<% unless label.blank? %>
  <label  class="form-label"
          :for="<%= dom_id.html_safe %>">
    <%= label %>
  </label>
<% end %>
<select :id="<%= dom_id.html_safe %>"
        class="form-select select mb-3"
        v-model="<%= model %>.<%= property %>">
  <% unless none.blank? %>
    <option value="" :selected="true"><%= none %></option>
  <% end %>
  <% pages.each do |page| %>
    <option value="<%= page.last %>">
      <%= page.first.html_safe %>
    </option>
  <% end %>
</select>
<% if hint.present? %>
  <div class="form-text"><%= hint %></div>
<% end %>
