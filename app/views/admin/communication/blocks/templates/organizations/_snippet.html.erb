<% block.template.selected_organizations.first(3).each do |element_or_organization| %>
  <div class="me-2 bg-light p-2">
    <% if element_or_organization.is_a?(University::Organization) %>
      <% organization = element_or_organization %>
      <% if organization.logo.attached? %>
        <%= kamifusen_tag organization.logo %>
      <% else %>
        <p><%= organization %></p>
      <% end %>
    <% else %>
      <% element = element_or_organization %>
      <% if element.best_logo_blob %>
        <%= kamifusen_tag element.best_logo_blob %>
      <% else %>
        <p><%= element.best_name %></p>
      <% end %>
    <% end %>
  </div>
<% end %>