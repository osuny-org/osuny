<div class="<%= block_html_class(block) %>">
  <div class="container">
    <div class="block-content">
      <% unless block.title.blank? %>
        <div class="top">
          <p class="block-title"><%= block.title %></p>
        </div>
      <% end %>
      <% if block.template.image %>
        <%= block_component_show block, :image %>
      <% end %>
    </div>
  </div>
</div>