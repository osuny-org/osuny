<%
if block.template.page
  page = block.template.page
%>
      page:
        path: "<%= page.path %>"
        slug: "<%= page.slug %>"
        file: "<%= page.git_path_relative %>"
<% end %>
<%= block_options_static block %>
      layout: <%= block.template.layout %>
      pages:
<% block.template.selected_pages.each do |element| %>
        <%# TODO L10N : Handle Page::Localization here %>
        - path: "<%= element.path %>"
          slug: "<%= element.slug %>"
          file: "<%= element.git_path_relative %>"
          external: false
<% end %>
