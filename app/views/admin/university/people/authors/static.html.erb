<%
# @l10n is a localization facet University::Person::Localization::Author
person = @l10n.about
person_localization = @l10n.person_localization
%>
---
title: >-
  <%= t('university.person.facets.author.posts_of', name: @l10n.to_s, locale: @l10n.language.iso_code) %>
breadcrumbs:
<%
@website.special_page(Communication::Website::Page::Person).ancestors_and_self.each do |page|
  page_l10n = page.localization_for(@l10n.language)
%>
  - title: "<%= page_l10n.to_s %>"
    path: "<%= page_l10n.path %>"
<% end %>
  - title: "<%= person_localization.to_s %>"
    path: "<%= person_localization.current_permalink_in_website(@website)&.path %>"
  - title: "<%= t('university.person.facets.author.posts', locale: @l10n.language.iso_code) %>"
<%= render 'admin/application/static/permalink', about: @l10n %>
<%= render 'admin/application/static/design', about: person, full_width: true, toc_offcanvas: true %>
person: >-
  <%= person_localization.to_s %>
first_name: >-
  <%= person_localization.first_name %>
last_name: >-
  <%= person_localization.last_name %>
<%= render 'admin/application/l10n/static', about: @l10n %>
<%= render 'admin/application/meta_description/static', about: person_localization %>
<%= render 'admin/application/summary/static', about: person_localization %>
---