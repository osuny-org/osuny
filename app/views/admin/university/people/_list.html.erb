<div class="row g-3">
  <% people.each do |person| %>
    <div class="col-6 col-lg-3 col-xxl-2">
      <div class="card mb-0">
        <%= osuny_thumbnail person, 
                            large: true %>
        <div class="card-body">
          <p class="mb-0"><%= link_to person,
                                      admin_university_person_path(person),
                                      class: 'text-black stretched-link'  %></p>
          <p class="small text-muted mb-0"><%= sanitize person.summary %></p>
        </div>
      </div>
    </div>
  <% end %>
</div>