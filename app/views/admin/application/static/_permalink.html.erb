<% if @website %>
url: "<%= @l10n.current_permalink_in_website(@website)&.path %>"
<% if @l10n.respond_to?(:slug) && @l10n.slug.present? %>
<% forced_slug ||= nil %>
slug: "<%= forced_slug || @l10n.slug %>"
<% end %>
<%
previous_permalinks = @l10n.previous_permalinks_in_website(@website)
if previous_permalinks.any?
%>
aliases:
<% previous_permalinks.each do |permalink| %>
  - <%= permalink.path %>
<% end %>
<% end %>
<% 
if @l10n.respond_to?(:hugo)
  hugo = @l10n.hugo(@website)
%>
hugo:
  permalink: "<%= hugo.permalink %>"
  file: "<%= hugo.file %>"
  path: "<%= hugo.path %>"
  slug: "<%= hugo.slug %>"
<% end %>
<% end %>