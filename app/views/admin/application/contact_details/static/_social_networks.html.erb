<% 
depth ||= 0
indentation = '  ' * depth
%>
<%= indentation %>social_networks:
<%
ContactDetails::SOCIAL_NETWORKS.each do |variable|
  data = ContactDetails.find_social(variable, about, l10n)
  next if data.blank?
  kind = "ContactDetails::#{variable.to_s.capitalize}".constantize
  detail = kind.new data
  %>
<%= render 'admin/application/contact_details/static/single',
            variable: variable, 
            detail: detail,
            depth: depth+1 %>
<% end %>